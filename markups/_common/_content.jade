mixin list-product(products)
    div.list-products.clearfix
        each product in products
            - var product = product
            div.list-product.clearfix
                .product__slider.slider-product
                    .slider-product__wrap-main-img
                        img(src="img/#{product.mainImg}").slider-product__main-img
                    .slider-product__support
                        ul.slider-product__support-list
                            each img in product.supportImg
                                li.slider-product__support-list__item
                                    img(src="img/#{img}").slider-product__support-list__item__img
                    .list-product__article
                        span.list-product__article-title Артикул
                        span.list-product__article-text= product.article
                .product__description
                    h2.product__description-title= product.title
                    p.product__description-text= product.description
                    .product__description-options
                                ul.info
                                    each typeInfo, index in product.typeInfo
                                        -for(var j=0;j<1;j++)
                                            li.type= typeInfo
                                ul.fono
                                    each answerInfo, index in product.answerInfo
                                        -for(var a=0;a<1;a++)
                                            li.type= answerInfo







